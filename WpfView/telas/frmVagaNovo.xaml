<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfView"
        xmlns:telas="clr-namespace:WpfView.telas" x:Class="WpfView.frmVagaNovo"
        mc:Ignorable="d"
        Title="Nova vaga" Height="512" Width="943" WindowStartupLocation="CenterScreen" Background="#FF8B8B8B">
    <Grid Margin="0" Grid.IsSharedSizeScope="True">
        <StackPanel Margin="0" Background="#FFD8D8D8">
            <Grid/>
            <Label x:Name="lblAndar" Content="Andar *" Width="400" Height="30" Margin="0,10,0,-2"/>
            <TextBox x:Name="edtAndar" Height="30" TextWrapping="Wrap" Width="400" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center" FontSize="14" AutomationProperties.IsRequiredForForm="True"/>
            <Label x:Name="lblCodigo" Content="Código *" Width="400" Height="30" Margin="0,10,0,0"/>
            <TextBox x:Name="edtCodigo" Height="30" TextWrapping="Wrap" Width="400" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center" FontSize="14" Margin="0" AutomationProperties.IsRequiredForForm="True"/>
            <Label x:Name="lblVagaTipo" Content="Tipo *" Width="400" Height="30" Margin="0,10,0,0"/>
            <ComboBox x:Name="cbVagaTipo" Width="400" Height="30" Panel.ZIndex="-2" SelectedValuePath="Descricao"/>
            <CheckBox x:Name="chkAtivo" Content="Ativo" Width="400" Height="30" IsChecked="True" Margin="0,20,0,0"/>
            <Button Content="Salvar" Margin="0,10,0,0" Width="100" Height="30" Panel.ZIndex="-3" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
